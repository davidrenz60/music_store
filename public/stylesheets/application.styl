@import "whitespace-reset.css"
@import 'mixins'

body
  font: normal 16px "Lato", sans-serif
  color: colors.text

main
  clear: both
  width: 800px
  padding: 25px 40px
  margin: 0 auto
  background: colors.main

h1
  padding: 0 0 25px 0
  font-size: 2em

form
  dt
    padding: 0 0 5px 0
  dd
    padding: 0 0 20px 0
  input[type="text"],
  input[type="date"],
  input[type="url"]
    width: 100%
    height: 30px
    padding: 5px 8px
    border: 1px solid colors.border
    border-radius: 6px
    box-sizing: border-box

#index
  ul
    padding: 0 0 40px 0
    margin:  0 0 0 -20px
    li
      display: inline-block
      width: 20%
      padding: 0 0 25px 20px
      box-sizing: border-box
      vertical-align: top
      img
        display: block
        width: 100%
        margin: 0 0 10px 0
      h2, h3, p
        padding: 0 0 5px 0
      h2
        font-size: 1.5em
      h3
        font-size: 1.25em

header
  width: 800px
  padding: 0 40px
  margin: 0 auto

#cart
  position: relative
  float: right
  width: 50%
  padding: 15px 0 0 0
  text-align: right
  label
    display: inline-block
    padding: 2px 3px
    cursor: pointer
  #items
    display: none
    position: absolute
    right: 0
    padding: 5px 10px
    z-index: 1
    background: colors.button.bg
    color: colors.button.text
  input
    display: none
    &:checked
      + #items
        display: block
  li
    text-align: left
    padding: 5px 0
    font-size: 12px
    span
      float: right
      margin: 0 0 0 15px
  a
    float: left
    position: relative
    top: 2px
    width: 12px
    height: 12px
    margin: 0 5px 0 0
    text-indent: 9999px
    transform: rotate(45deg)
    &:before, &:after
      content: '';
      position: absolute
      background: colors.delete
    &:before
      top: 0
      bottom: 0
      left: 50%
      width: 2px
      margin-left: -1px
    &:after
      left: 0
      right: 0
      top: 50%
      height: 2px
      margin-top: -1px
a.button, input[type="submit"]
  button()

