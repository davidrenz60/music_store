@import "whitespace-reset.css"
@import 'mixins'

body
  font: normal 16px "Lato", sans-serif
  color: colors.text

main
  clear: both
  width: 800px
  padding: 25px 40px
  margin: 0 auto
  background: colors.main

h1
  padding: 0 0 25px 0
  font-size: 2em

form
  dt
    padding: 0 0 5px 0
  dd
    padding: 0 0 20px 0
  input[type="text"],
  input[type="date"],
  input[type="url"]
    width: 100%
    height: 30px
    padding: 5px 8px
    border: 1px solid colors.border
    border-radius: 6px
    box-sizing: border-box

#index
  ul
    padding: 0 0 40px 0
    margin:  0 0 0 -20px
    li
      display: inline-block
      width: 20%
      padding: 0 0 25px 20px
      box-sizing: border-box
      vertical-align: top
      img
        display: block
        width: 100%
        margin: 0 0 10px 0
      h2, h3, p
        padding: 0 0 5px 0
      h2
        font-size: 1.5em
      h3
        font-size: 1.25em
      div
        margin: 8px 0 0 3px
      a
        display: block
        text-decoration: none
      a.edit
          margin: 8px 0px 0 2px;
          padding: 0 0 0 20px;
          font-size: 13px;
          color: colors.button.bg
          background: url(../images/edit.png) 0 2px no-repeat;
      a.delete
          margin-right: 5px;
          top: 1px;
          delete_icon(15px)
          + p
            color: colors.delete
            font-size: 13px
header
  width: 800px
  padding: 0 40px
  margin: 0 auto

#cart
  position: relative
  float: right
  width: 50%
  padding: 15px 0 0 0
  text-align: right
  label
    display: inline-block
    padding: 2px 3px
    cursor: pointer
  #items
    display: none
    position: absolute
    right: 0
    padding: 5px 10px
    z-index: 1
    background: colors.button.bg
    color: colors.button.text
  input
    display: none
    &:checked
      + #items
        display: block
  li
    text-align: left
    padding: 5px 0
    font-size: 12px
    span
      float: right
      margin: 0 0 0 15px
    a
      float: left
      position: relative
      margin: 0 5px 0 0
      top: 2px
      delete_icon(12px)

a.button, input[type="submit"]
  button()

