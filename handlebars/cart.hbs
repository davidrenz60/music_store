{{#if quantity}}
  <label for="cart_toggle">{{quantity}} items</label>
  <input type="checkbox" id="cart_toggle">
  <div id="items">
    <ul>
    {{#each items}}
    <li>
      <a href="#" data-id={{id}}>Remove</a>
      {{title}} x {{quantity}}
      <span>${{format_price price}}</span>
    </li>
    {{/each}}
    </ul>
    <p>Total: ${{format_price total}}</p>
  </div>
{{else}}
  <p>0 items</p>
{{/if}}